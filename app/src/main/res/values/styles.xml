<resources>

    <!-- themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="PlaybackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <!-- views -->

    <style name="AssetCard">
        <item name="android:textAppearance">@style/AssetCardText</item>
        <item name="android:background">@color/lighter_gray</item>
    </style>

    <style name="AssetListHeader">
        <item name="android:textAppearance">@style/AssetListHeaderText</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="PlaybackSeekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/even_lighter_gray</item>
        <item name="android:secondaryProgressTint">@color/lighter_gray</item>
        <item name="android:progressTint">@color/real_white</item>
        <item name="android:max">10000</item>
    </style>

    <!-- text appearances -->

    <style name="AssetCardText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AssetListHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaybackTimeText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/seekbar_text_size</item>
        <item name="android:textColor">@color/real_white</item>
    </style>

</resources>
